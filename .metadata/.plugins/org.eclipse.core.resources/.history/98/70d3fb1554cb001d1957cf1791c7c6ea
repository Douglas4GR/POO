package br.edu.faeterj;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Calculadora calc = new Calculadora();
		
		//the comments are made in english because for eclipse IDE, portuguese words appears underlined (as an error)    
		//declaration of variables
		int valor1 = 0;
		int valor2 = 0;
		int resultadoInt = 0;
		int opcao = 0;
		
		//collecting values
		System.out.println("Valor 1: ");
		valor1 = sc.nextInt();
		System.out.println("Valor 2: ");
		valor2 = sc.nextInt();
		
		while(opcao < 4) {
			calc.mostrarOpc();
			opcao = sc.nextInt();
			switch(opcao) {
			case 0:
				resultadoInt = calc.Soma(valor1, valor2);
				System.out.println("Resultado: "+resultadoInt);
				break;
			case 1:
				resultadoInt = calc.Subt(valor1, valor2);
				System.out.println("Resultado: "+resultadoInt);
				break;
			case 2:
				resultadoInt = calc.Mult(valor1, valor2);
				System.out.println("Resultado: "+resultadoInt);
				break;
			case 3:
				resultadoInt = calc.Divi(valor1, valor2);
				System.out.println("Resultado: "+resultadoInt);
				break;
			}
		}
		
		
		
		
		sc.close();
	}

}